public class BubbleSort implements SortingAlgorithm {

	public void sort(int [] a) {
		//boolean swapped = true;
		for(int i = 0; i < a.length; i++) {
			//swapped = false;
			for (int j = 0; j < a.length - i - 1; j++) {
				if(a[j] > a[j +1]) {
					swap(a, j, j + 1);
					//swapped = false;
				}
			}
		}
	}
	
	public void swap(int[] arr, int i, int j) {
	
		int temp = arr[i];
		arr[i] = arr[j];
		arr[j] = temp;
	
	}

}
